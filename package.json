{
  "name": "pms-simulator",
  "version": "0.1.0",
  "scripts": {
    "start": "pm2 start tools/ecosystem.config.js",
    "restart": "pm2 startOrRestart tools/ecosystem.config.js",
    "stop": "pm2 delete tools/ecosystem.config.js",
    "app": "cross-env NODE_ENV=debug node dist/pms.app.js",
    "cli": "cross-env NODE_ENV=debug node dist/pms.cli.js",
    "init": "shx cp resource/pms/config.json.example resource/pms/config.json",
    "build": "webpack --progress --config tools/webpack.config.js",
    "clean": "rimraf {dist,log}/*",
    "preinstall": "node tools/scripts/preinstall",
    "postinstall": "node tools/scripts/postinstall",
    "lint": "eslint ./src",
    "format": "prettier -a --config .prettierrc --write '{src,test}/**/*.js'",
    "test": "cross-env NODE_ENV=test mocha --require babel-core/register 'src/**/*.{test,spec}.js'",
    "precommit": "lint-staged",
    "docker:build": "./tools/build-docker-image.sh",
    "docker:start": "docker run --rm --net=host --name=pms -d -it pms",
    "docker:stop": "docker stop pms",
    "docker:cli": "docker exec -it pms /home/pms/app/tools/cli-entrypoint.sh"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --config .prettierrc --write",
      "lint",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-latest-minimal": "^1.1.2",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^4.19.1",
    "eslint-plugin-mocha": "^4.12.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-security": "^1.4.0",
    "lint-staged": "^7.0.0",
    "mocha": "^5.0.5",
    "nock": "^9.2.3",
    "prettier": "^1.11.1",
    "proxyquire": "^2.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.8",
    "supertest": "^3.0.0",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.1",
    "chance": "^1.0.13",
    "compression": "^1.7.1",
    "configstore": "^3.1.1",
    "cors": "^2.8.3",
    "cross-env": "^5.1.4",
    "express": "^4.14.0",
    "format-json": "^1.0.3",
    "graceful-fs": "^4.1.11",
    "is-json": "^2.0.1",
    "joi": "^10.2.2",
    "lodash": "^4.17.4",
    "morgan": "^1.9.0",
    "pm2": "^2.10.4",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "shx": "^0.2.2",
    "uniqid": "^5.0.3",
    "url-parse": "^1.2.0",
    "vorpal": "^1.12.0",
    "winston": "^2.4.1"
  }
}
